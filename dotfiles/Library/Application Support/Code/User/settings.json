{
  "editor.fontFamily": "\"SauceCodePro Nerd Font\", Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.showSlider": "always",
  "editor.cursorBlinking": "solid",
  "workbench.colorTheme": "Monokai",
  "workbench.tree.indent": 16,
  "workbench.editor.showIcons": false,
  "explorer.decorations.colors": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.roundedSelection": false,
  "editor.stablePeek": true,
  "files.trimTrailingWhitespace": true,
  "editor.wrappingIndent": "deepIndent",
  "python.experiments.enabled": false,
  "python.testing.pytestEnabled": true,
  "python.globalModuleInstallation": true,
  "editor.formatOnSave": true,
  "python.formatting.blackArgs": [
    "--target-version",
    "py37",
    "--target-version",
    "py38",
    "--target-version",
    "py39",
    "--target-version",
    "py310",
    "--target-version",
    "py311"
  ],
  "html.format.indentInnerHtml": true,
  "html.format.templating": true,
  "files.associations": {
    // Forces recognition of Pelican's themes templates as Jinja2 files.
    "**/templates/**/*.html": "jinja-html"
  },
  "html.format.indentHandlebars": true,
  "jupyter.themeMatplotlibPlots": true,
  "jupyter.askForKernelRestart": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "python.venvPath": "~/Library/Caches/pypoetry/virtualenvs/",
  "jupyter.runStartupCommands": [
    "!pip install ipython-autotime",
    "%reload_ext autotime",
    "!pip install jupyterlab-code-formatter black isort",
    "%reload_ext jupyterlab_code_formatter",
    "# TODO: find a way to trigger jupyterlab_code_formatter:format_all keyboard shortcut",
    "# or better: force jupyterlab_code_formatter formatOnSave settings to true",
    "%precision 10"
  ],
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "python.languageServer": "Pylance",
  "notebook.lineNumbers": "on",
  "testing.defaultGutterClickAction": "contextMenu",
  "editor.bracketPairColorization.enabled": true,
  "telemetry.telemetryLevel": "off",
  "editor.guides.bracketPairs": true,
  "explorer.confirmDelete": false,
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.date.format": "ISO Date & Time",
  "git.autofetch": true,
  "python.formatting.autopep8Args": [
    "--recursive",
    "--in-place",
    "--max-line-length",
    "88",
    "--select",
    "E501",
    "--aggressive"
  ],
  "autoDocstring.docstringFormat": "sphinx-notypes",
  "git.mergeEditor": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "python.analysis.completeFunctionParens": true,
  "editor.stickyScroll.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnType": true,
  "djlint.formatCss": true,
  "djlint.formatJs": true,
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "black-formatter.importStrategy": "fromEnvironment",
  "notebook.formatOnSave.enabled": true,
  "notebook.output.scrolling": true,
  "autoDocstring.startOnNewLine": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "python.formatting.provider": "black",
  "ruff.args": [
    "--select=ALL"
  ],
  "markdown.validate.enabled": true,
  "jupyter.experiments.enabled": false,
  "python.linting.mypyEnabled": true
}